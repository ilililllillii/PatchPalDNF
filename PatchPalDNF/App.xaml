<Application x:Class="PatchPalDNF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PatchPalDNF"
             xmlns:converter ="clr-namespace:PatchPalDNF.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- 资源字典 -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- 值转换器 -->
            <converter:FileNameConverter x:Key="FileNameConverter"/>
            <converter:CheckBoxConverter x:Key="CheckBoxConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
